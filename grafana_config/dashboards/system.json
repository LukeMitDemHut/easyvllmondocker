            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 8,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 8
      },
      "type": "timeseries",
      "title": "GPU Memory Temperature",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_MEMORY_TEMP",
          "refId": "A",
          "legendFormat": "GPU {{gpu}} Memory",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
