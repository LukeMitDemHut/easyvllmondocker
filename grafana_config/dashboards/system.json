{
  "uid": "system-dashboard",
  "title": "System Metrics",
  "tags": ["system", "infrastructure"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "type": "timeseries",
      "title": "GPU Utilization",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_UTIL",
          "refId": "A",
          "legendFormat": "GPU {{gpu}}",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      },
      "type": "timeseries",
      "title": "GPU Memory Usage",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_FB_USED",
          "refId": "A",
          "legendFormat": "GPU {{gpu}} Used",
          "datasource": {
            "type": "prometheus"
          }
        },
        {
          "expr": "DCGM_FI_DEV_FB_FREE",
          "refId": "B",
          "legendFormat": "GPU {{gpu}} Free",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 6,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 0
      },
      "type": "timeseries",
      "title": "GPU Temperature",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_TEMP",
          "refId": "A",
          "legendFormat": "GPU {{gpu}}",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 85,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 8
      },
      "type": "timeseries",
      "title": "GPU Power Usage",
