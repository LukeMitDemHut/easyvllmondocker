    },
    {
      "id": 9,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 8
      },
      "type": "timeseries",
      "title": "GPU Clock Speeds",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_SM_CLOCK",
          "refId": "A",
          "legendFormat": "GPU {{gpu}} SM",
          "datasource": {
            "type": "prometheus"
          }
        },
        {
          "expr": "DCGM_FI_DEV_MEM_CLOCK",
          "refId": "B",
          "legendFormat": "GPU {{gpu}} Memory",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "hertz",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 16
      },
      "type": "timeseries",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
          "refId": "A",
          "legendFormat": "CPU Usage",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 14,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 16
      },
      "type": "timeseries",
      "title": "CPU Threads Usage",
      "targets": [
        {
          "expr": "100 - (rate(node_cpu_seconds_total{mode=\"idle\"}[1m]) * 100)",
          "refId": "A",
          "legendFormat": "CPU {{cpu}}",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 10,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 16
      },
      "type": "timeseries",
      "title": "CPU Temperature",
      "targets": [
        {
          "expr": "node_hwmon_temp_celsius{chip=~\".*pci.*\"}",
          "refId": "A",
          "legendFormat": "CPU",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 24
      },
      "type": "timeseries",
      "title": "System RAM Usage",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "refId": "A",
          "legendFormat": "Used",
          "datasource": {
            "type": "prometheus"
          }
        },
        {
          "expr": "node_memory_MemAvailable_bytes",
          "refId": "B",
          "legendFormat": "Available",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 11,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 8,
        "y": 24
      },
      "type": "timeseries",
      "title": "Disk I/O",
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[1m])",
          "refId": "A",
          "legendFormat": "{{device}} Read",
          "datasource": {
            "type": "prometheus"
          }
        },
        {
          "expr": "rate(node_disk_written_bytes_total[1m])",
          "refId": "B",
          "legendFormat": "{{device}} Write",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 12,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 32
      },
      "type": "timeseries",
      "title": "Filesystem Usage",
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|vfat\"} * 100) / node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|vfat\"})",
          "refId": "A",
          "legendFormat": "{{mountpoint}}",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 80,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      },
      "type": "timeseries",
      "title": "Network Usage",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\"}[1m])",
          "refId": "A",
          "legendFormat": "{{device}} RX",
          "datasource": {
            "type": "prometheus"
          }
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\"}[1m])",
          "refId": "B",
          "legendFormat": "{{device}} TX",
          "datasource": {
            "type": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        }
      }
